<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9F4D0"
        tools:context=".MainActivity">




    <ImageView android:layout_width="171dp" android:layout_height="168dp"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="90dp"
               app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="542dp"
               android:layout_marginStart="95dp" android:layout_marginEnd="94dp"
               android:src="@drawable/logo"
               app:layout_constraintHorizontal_bias="0.49" app:layout_constraintVertical_bias="0.231"
                android:id="@+id/logomain"/>



    <ImageView android:layout_height="166dp"
               android:src="@drawable/img_2" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" android:layout_width="317dp"
               android:layout_marginTop="258dp" android:layout_marginStart="25dp" android:layout_marginEnd="18dp"
               android:layout_marginBottom="376dp" app:layout_constraintHorizontal_bias="0.431"
               app:layout_constraintVertical_bias="0.0"

               android:id="@+id/textimageView"/>
    <Button
            android:text="@string/sign_in"
            android:layout_width="289dp"
            android:textSize="18sp"
            android:layout_height="48dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/signinbutton"
            app:layout_constraintTop_toBottomOf="@+id/textimageView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.17000002"
            android:backgroundTint="#7DA64B"/>
    <ImageView

            android:layout_width="214dp"

            android:layout_height="18dp"


            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:id="@+id/signupbutton"
            android:src="@drawable/signup"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signinbutton" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.59000003" android:textAllCaps="false"/>






</androidx.constraintlayout.widget.ConstraintLayout>