<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="280dp"
                android:layout_height="match_parent">

<LinearLayout


        android:id="@+id/dashboard_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/bottomcustomcard">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/customcard"
            android:orientation="horizontal" android:baselineAligned="false">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_black"/>


        </LinearLayout>



        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center_vertical">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/dosis_medium"
                android:textSize="18sp"
        />

        <ImageView
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:layout_marginEnd="48dp"
                android:src="@drawable/account"
        />


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order History"
                android:textAlignment="center"
                android:fontFamily="@font/dosis_medium"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="18sp"
        />

        <ImageView
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:layout_marginEnd="48dp"
                android:src="@drawable/order_history"
        />


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sign Out"
                android:textAlignment="center"
                android:fontFamily="@font/dosis_medium"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/sign_out"
        />

        <ImageView
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:layout_marginEnd="48dp"
                android:src="@drawable/baseline_exit_to_app_24"
                android:id="@+id/sign_out_icon"
        />


    </LinearLayout>




</LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="50dp"
              android:layout_alignParentBottom="true"
              android:text="App Version: 1.0.0"
              android:textAlignment="center"
              android:fontFamily="@font/dosis_medium"
              android:padding="12dp"
              android:textStyle="bold"
              android:textSize="18sp"/>

    </RelativeLayout>
