<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="283dp"
        android:layout_height="183dp"
        app:cardBackgroundColor="#FFEEEE"
        android:layout_centerInParent="true"
        android:id="@+id/top_rated_cardview"
        android:onClick="openActivityDetails"
        android:layout_margin="10dp"


        app:cardCornerRadius="20dp"
        android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:onClick="openActivityDetails"
    >

        <ImageView android:layout_width="283dp" android:layout_height="68dp"
                   android:id="@+id/top_rated_image"
                   android:background="@color/cardview_light_background" app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                   android:onClick="openActivityDetails"

                   android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/textView2"/>


        <TextView android:layout_width="122dp" android:layout_height="21dp"
                  android:text="Category"
                  android:fontFamily="@font/dosis_medium"
                  android:textStyle="normal"
                  android:textAlignment="center"
                  android:onClick="openActivityDetails"

                  android:textSize="15sp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.099"
                  android:id="@+id/textView2"/>


        <TextView android:layout_width="122dp" android:layout_height="21dp"
                  android:fontFamily="@font/dosis_medium"
                  android:onClick="openActivityDetails"


                  android:textStyle="bold"
                  android:textAlignment="inherit"
                  android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.9"
                  android:id="@+id/food_category"/>


        <TextView android:layout_width="122dp" android:layout_height="21dp"
                  android:fontFamily="@font/dosis_medium"
                  android:textStyle="bold"
                  android:textAlignment="inherit"
                  android:onClick="openActivityDetails"

                  android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.9"
                  android:id="@+id/food_name" app:layout_constraintVertical_bias="0.691"/>


        <TextView android:layout_width="122dp" android:layout_height="21dp"
                  android:fontFamily="@font/dosis_medium"
                  android:textStyle="bold"
                  android:textAlignment="inherit"
                  android:onClick="openActivityDetails"

                  android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.9"
                  android:id="@+id/food_price" app:layout_constraintVertical_bias="0.901"/>


        <TextView android:layout_width="122dp" android:layout_height="21dp"
                  android:fontFamily="@font/dosis_medium"
                  android:textStyle="normal"
                  android:text="Food name"
                  android:onClick="openActivityDetails"

                  android:textAlignment="center"
                  android:textSize="15sp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.099"
                  android:id="@+id/textView" app:layout_constraintVertical_bias="0.691"/>


        <TextView android:layout_width="122dp" android:layout_height="21dp"
                  android:fontFamily="@font/dosis_medium"
                  android:text="Price"
                  android:onClick="openActivityDetails"

                  android:textStyle="normal"
                  android:textAlignment="center"
                  android:textSize="15sp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.099"
                  app:layout_constraintVertical_bias="0.901"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>