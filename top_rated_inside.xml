<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="332dp" android:layout_height="186dp"
                                                       android:id="@+id/top_rated_cardview_ind"
                                                       android:background="@drawable/card_toprated"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintVertical_bias="0.060000002">


        <ImageView android:layout_width="27dp" android:layout_height="27dp"



                   android:id="@+id/fav_no_col" app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                   android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginBottom="143dp" android:layout_marginEnd="289dp"
                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                   app:layout_constraintVertical_bias="0.0"/>
        <TextView android:layout_width="146dp" android:layout_height="37dp"
                  android:text="Food name"
                  android:id="@+id/toprated_foodname"
                  android:textSize="18sp"
                  android:fontFamily="@font/dosis_medium"
                  android:gravity="center_vertical"

                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.172"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintVertical_bias="0.429"/>
        <TextView android:layout_width="97dp" android:layout_height="32dp"
                  android:text="Food Category"
                  android:id="@+id/toprated_foodcategory"
                  android:textSize="16sp"
                  android:fontFamily="@font/dosis_medium"
                  android:gravity="center_vertical"

                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.323"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintVertical_bias="0.103"/>
        <TextView android:layout_width="71dp" android:layout_height="32dp"
                  android:textSize="18sp"
                  android:fontFamily="@font/dosis_medium"

                  android:gravity="center_vertical"
                  android:text="Price : Rs. "
                  android:id="@+id/food_price"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.707"/>
        <TextView android:layout_width="71dp" android:layout_height="32dp"
                  android:textSize="18sp"
                  android:fontFamily="@font/dosis_medium"

                  android:gravity="center_vertical"
                  android:text="150"
                  android:id="@+id/food_money"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.386"
                  app:layout_constraintVertical_bias="0.707"/>
        <ImageView android:layout_width="89dp" android:layout_height="85dp"
                   android:id="@+id/food_image"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.827"
                   app:layout_constraintVertical_bias="0.326"
                   app:circularflow_defaultRadius="12dp"
                   android:src="@drawable/sampleimage"
        android:background="@drawable/card_corner"/>

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="108dp"
                                                           android:layout_height="30dp"
                                                           app:layout_constraintTop_toTopOf="parent"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintHorizontal_bias="0.857"
                                                           app:layout_constraintVertical_bias="0.814"
        android:background="@drawable/custom_signin">


            <ImageView android:layout_width="27dp" android:layout_height="27dp"
                       android:id="@+id/plus"
                       android:onClick="increment"
                       android:src="@drawable/plus" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/quantity"
                       app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.11"
            />
            <ImageView android:layout_width="27dp" android:layout_height="27dp"
                       android:id="@+id/minus"
                       android:onClick="decrement"
                       android:src="@drawable/minus" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/quantity" app:layout_constraintHorizontal_bias="1.0"/>
            <TextView android:layout_width="40dp" android:layout_height="30dp"
                      android:text="0"
                      android:fontFamily="@font/dosis_medium"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textSize="16sp"
                      android:id="@+id/quantity"
                      app:layout_constraintStart_toEndOf="@+id/minus" app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/plus"
                      app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>